<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- 没有获得焦点，没有点击时的背景图片 -->
    <item android:drawable="@drawable/set_bg_quit_unselected" android:state_focused="false" android:state_pressed="false"/>
    <!-- 点击时的背景图片 -->
    <item android:drawable="@drawable/set_bg_quit_selected" android:state_pressed="true"/>
    <!-- 获得焦点时的背景图片 -->
    <item android:drawable="@drawable/set_bg_quit_selected" android:state_focused="true"/>
    <!-- 默认时的背景图片 -->
    <item android:drawable="@drawable/set_bg_quit_unselected"/>

</selector>