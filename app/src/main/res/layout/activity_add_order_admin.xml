                    android:text="付款方式      "
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/medium_sp_16"
                    android:textColor="@color/black"
                    android:id="@+id/pay_mode_txt"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请填写付款方式"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/pay_mode_txt"
                    android:id="@+id/spinner_pay_mode"
                    android:layout_marginLeft="10dp"
                    android:textColorHint="@color/order_list_detail_course_table_time"
                    android:background="@color/white"
                    android:textColor="@color/themeApp"
                    android:textSize="@dimen/medium_sp_16"/>
