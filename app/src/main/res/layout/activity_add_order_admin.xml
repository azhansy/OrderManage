                    android:textColor="@color/themeApp"
                    android:textSize="@dimen/medium_sp_16"/>

            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_border"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单状态      "
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/medium_sp_16"
                    android:textColor="@color/black"
                    android:id="@+id/order_type_txt"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/order_type_txt"
                    android:id="@+id/spinner_order_type"
                    android:layout_marginLeft="10dp"
                    android:entries="@array/order_type"
                    android:background="@color/white"
                    android:textColor="@color/themeApp"
                    android:textSize="@dimen/medium_sp_16"/>

            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
