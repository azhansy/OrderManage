<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_crash_bg">

    <!--<ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_crash_error_help"
        android:src="@drawable/crash_error_help"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="90dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/customactivityoncrash_error_activity_image"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_crash"
            android:layout_height="wrap_content"
            android:contentDescription="@null" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/large_sp_18"
            android:text="捕捉到程序异常崩溃"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="程序多次崩溃时，建议清除数据后重启。"/>

        <Button
            android:id="@+id/btn_restart_app"
            android:layout_marginTop="10dp"
            android:textColor="#00a8ff"
            android:layout_marginLeft="38dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="38dp"
            android:text="重启软件" />

        <Button
            android:id="@+id/btn_clear_data"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:textColor="#00a8ff"
            android:text="清除数据" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:lines="4"
            android:id="@+id/tv_crash"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>