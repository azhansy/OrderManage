<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center_vertical"
    android:background="@drawable/set_bg_bottom_selector"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="1dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/ic_pdf"
        android:padding="5dp"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/download_name"
        android:layout_toRightOf="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_vertical"
        android:maxEms="12"
        android:singleLine="true"
        android:text="下载名称"
        android:textColor="@color/editBackground"
        android:textSize="@dimen/large_sp_18" />

    <RelativeLayout
        android:id="@+id/rel_buttom"
        android:layout_below="@+id/download_name"
        android:layout_toRightOf="@+id/image"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/course_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="下载时间: "
            android:textColor="@color/order_list_value_color"
            android:textSize="@dimen/normal_sp_14" />

        <TextView
            android:id="@+id/download_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/course_txt"
            android:text="2016年1月2日"
            android:textColor="@color/order_list_value_color"
            android:textSize="@dimen/normal_sp_14" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_border"/>
</RelativeLayout>