<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:id="@+id/layout_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/product_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxEms="12"
            android:singleLine="true"
            android:text="温馨提醒"
            android:textColor="@color/order_list_value_color"
            android:textSize="@dimen/x_large_sp_20" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <!-- <TextView
                android:id="@+id/tv_product_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="产品编号: "
                android:padding="5dp"
                android:textColor="@color/order_list_key_color"
                android:textSize="@dimen/medium_sp" />-->

            <TextView
                android:id="@+id/product_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:layout_toRightOf="@+id/tv_product_code"
                android:text="200125217"
                android:textColor="@color/themeApp"
                android:textSize="@dimen/medium_sp_16" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_buttom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/course_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="库存低于100,请注意。      "
                android:textColor="@color/order_list_value_color"
                android:textSize="@dimen/normal_sp_14" />

            <TextView
                android:id="@+id/notice_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/course_txt"
                android:text="2016/3/7/9090"
                android:layout_alignParentRight="true"
                android:textColor="@color/order_list_value_color"
                android:textSize="@dimen/normal_sp_14" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
